<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edward.audit.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER" spacing="20.0">
        <VBox>
            <Label text="Efectivo" alignment="CENTER" style="-fx-font-size: 20px;"/>
            <TextArea fx:id="cashText" editable="false" prefHeight="800.0" prefWidth="200.0"/>
            <Label fx:id="cashTotal" alignment="CENTER" style="-fx-font-size: 20px;"/>
            <Button text="Actualizar" onAction="#onCashButtonClick"/>
        </VBox>
        <VBox>
            <Label text="Afirme" alignment="CENTER" style="-fx-font-size: 20px;"/>
            <TextArea fx:id="afirmeText" editable="false" prefHeight="800.0" prefWidth="200.0"/>
            <Label fx:id="afirmeTotal" alignment="CENTER" style="-fx-font-size: 20px;"/>
            <Button text="Actualizar" onAction="#onAfirmeButtonClick"/>
        </VBox>
        <VBox>
            <Label text="Rappi" alignment="CENTER" style="-fx-font-size: 20px;"/>
            <TextArea fx:id="rappiText" editable="false" prefHeight="800.0" prefWidth="200.0"/>
            <Label fx:id="rappiTotal" alignment="CENTER" style="-fx-font-size: 20px;"/>
            <Button text="Actualizar" onAction="#onRappiButtonClick"/>
        </VBox>
        <VBox>
            <Label text="BBVA" alignment="CENTER" style="-fx-font-size: 20px;"/>
            <TextArea fx:id="bbvaText" editable="false" prefHeight="800.0" prefWidth="200.0"/>
            <Label fx:id="bbvaTotal" alignment="CENTER" style="-fx-font-size: 20px;"/>
            <Button text="Actualizar" onAction="#onBbvaButtonClick"/>
        </VBox>
        <VBox>
            <Label text="Transferencias" alignment="CENTER" style="-fx-font-size: 20px;"/>
            <TextArea fx:id="checkText" editable="false" prefHeight="800.0" prefWidth="200.0"/>
            <Label fx:id="checkTotal" alignment="CENTER" style="-fx-font-size: 20px;"/>
            <Button text="Actualizar" onAction="#onCheckButtonClick"/>
        </VBox>
        <VBox>
            <Label text="Uber" alignment="CENTER" style="-fx-font-size: 20px;"/>
            <TextArea fx:id="uberText" editable="false" prefHeight="800.0" prefWidth="200.0"/>
            <Label fx:id="uberTotal" alignment="CENTER" style="-fx-font-size: 20px;"/>
            <Button text="Actualizar" onAction="#onUberButtonClick"/>
        </VBox>
    </HBox>
</VBox>
